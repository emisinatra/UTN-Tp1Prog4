<%- include ../layouts/cabecera.ejs %>

<br>

<div class="card">
    <div class="card-header">
        Editar empleado
    </div>
    <div class="card-body">
        <h5 class="card-title">Datos del empleado</h5>
        <p class="card-text">
            <form method="post" action="../actualizar/">

                <div class="form-group">
                    <label for="my-input">Legajo</label>
                    <input id="my-input" value="<%=empleado.legajo%>" class="form-control" type="text" name="legajo">
                </div>

                <div class="form-group">
                    <label for="my-input">Apellido</label>
                    <input id="my-input" value="<%=empleado.apellido%>" class="form-control" type="text" name="apellido">
                </div>

                <div class="form-group">
                    <label for="my-input">Nombre</label>
                    <input id="my-input" value="<%=empleado.nombre%>" class="form-control" type="text" name="nombre">
                </div>

                <div class="form-group">
                    <label for="my-input">DNI</label>
                    <input id="my-input" value="<%=empleado.dni%>" class="form-control" type="text" name="dni">
                </div>

                <div class="form-group">
                    <label for="my-input">Sector</label>
                    <input id="my-input" value="<%=empleado.sector%>" class="form-control" type="text" name="sector">
                </div>

                <div class="form-group">
                    <label for="my-input">Fecha de ingreso</label>
                    <input id="my-input" value="<%=empleado.fechaIngreso%>" class="form-control" type="text" name="fechaIngreso">
                </div>

                <div class="form-group">
                    <label for="my-input">Activo</label>
                    <input id="my-input" value="<%=empleado.activo%>" class="form-control" type="text" name="activo">
                </div>

                <button class="btn btn-success" type="submit">Actualizar</button>
                <a class="btn btn-primary" href="/empleados">Cancelar</a>

            </form>
        </p>
    </div>
</div>


